<%= simple_form_for @order, wrapper: :append do |f| %>
  <%= f.input :rent_id, as: :hidden, value: @order.rent_id %>
  <div class="fieldset">
    <legend>选择预订时间</legend>
    <div id='select_time'>
      <%= f.input :start, label: '开始时间', hint: "<span class='glyphicon glyphicon-calendar'></span>", input_html: {id: 'start'} %>
      <%= f.input :end, label: '结束时间', hint: "<span class='glyphicon glyphicon-calendar'></span>", input_html: {id: 'end'} %>
    </div>
    <div class="form-group">
      <div class="col-md-2 col-md-offset-2">
        <%= f.submit "确定",:class => "btn btn-primary"%>
      </div>
    </div>
  </div>
<% end %>
<%= render 'shared/datepicker' %>