<style>
 .navbar .nav > li > a:hover {
    color: rgb(48, 48, 48);
    background-color: rgb(229, 227, 222);
}
</style>
<script>
  $(document).ready(function(){
    <% unless session[:current_city].nil? %>
    $("#current_city").html("<%= session[:current_city] %><b class='caret'></b>");
    <% end %>
  });
</script>
<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">  
    <div class="container" style="width:960px">      
      <!-- Responsive Navbar Part 1: Button for triggering responsive navbar (not covered in tutorial). Include responsive CSS to utilize. -->
      <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="brand" href="<%= root_url %>">车流网</a>
      <!-- Responsive Navbar Part 2: Place all navbar contents you want collapsed withing .navbar-collapse.collapse. -->
      <div class="nav-collapse collapse navbar-responsive-collapse">
        <ul class="nav">
          <li class="dropdown">
            <a href="#" id="current_city" class="dropdown-toggle" data-toggle="dropdown">选择城市<b class="caret"></b></a>            
            <ul class="dropdown-menu">
              <li><%= link_to '北京', search_rents_by_city_path(city: '北京市') %></li>
              <li><%= link_to '合肥', search_rents_by_city_path(city: '合肥市') %></li>
              <li><%= link_to '沈阳', search_rents_by_city_path(city: '沈阳市') %></li>
            </ul>
          </li>
        </ul>
        <%= render 'layouts/nav_search_form' %>
        <% if signed_in? %>
        <ul class="nav pull-right">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.name %><b class="caret"></b></a>
            <ul class="dropdown-menu pull-left">
              <li class="dropdown-submenu">
                <a tabindex="-1" href="#">我是车主</a>
                <ul class="dropdown-menu">
                  <li><%= link_to '我的车辆', mycars_path %></li>
                  <li><%= link_to '发布出租信息', new_rent_path %></li>
                  <li><%= link_to '管理我的出租', myrents_path %></li>
                </ul>
              </li>
              <li class="dropdown-submenu">
                <a tabindex="-1" href="#">我要租车</a>
                <ul class="dropdown-menu">
                  <li><%= link_to '我的订单', my_order_path %></li>
                </ul>
              </li>
              <li><%= link_to '个人资料设置', edit_profile_path(current_user.profile) %></li>
              <li><%= link_to '登出', logout_path, method: :delete%></li>
            </ul>
          </li>
        </ul>
        <% else %>
        <ul class="nav pull-right">
          <li><%= link_to "注册", signup_path %></li>  
        </ul>
        <%= render 'layouts/nav_login_form' %>
        <% end %>        
        <ul class="nav pull-right" style="padding-top:8px;margin-right:5px">
          <li><%= button_to '出租', new_rent_path, class: "btn btn-small btn-success", id: 'rent', method: 'get' %>
          </li>
        </ul> 
      </div><!--/.nav-collapse -->
    </div>
  </div><!-- /.navbar-inner -->
</div><!-- /.navbar -->
