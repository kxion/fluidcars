<%= form_tag '/login', :class => "navbar-form pull-right", style: "padding-top:5px" do %>
  <%= email_field_tag :email, params[:email], {:class => "input-small",    :placeholder => "Email"} %>
  <%= password_field_tag :password, params[:password], {:class => "input-small", :placeholder => "Password"} %>
  <%= submit_tag '登录', :class => "btn btn-primary" %>
<% end %>