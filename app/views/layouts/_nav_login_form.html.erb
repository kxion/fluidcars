<%= form_tag '/auth/identity/callback', :class => "navbar-form navbar-right" do %>
  <div class="form-group">
  <%= email_field_tag :auth_key, params[:auth_key], {:class => "form-control", :placeholder => "邮箱"} %>
  </div>
  <div class="form-group">
  <%= password_field_tag :password, params[:password], {:class => "form-control", :placeholder => "密码"} %>
  </div>
  <%= submit_tag '登录', :class => "btn btn-primary" %>
<% end %>