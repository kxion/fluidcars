<%= form_tag login_path do %>
  <div class="control-group">
    <%= label_tag :email, 'email', :class => "control-label" %>
    <div class="controls">
      <%= email_field_tag :email, params[:email], :placeholder => "email" %>
    </div>
  </div>
  <div class="control-group">
    <%= label_tag :password, 'password',:class => "control-label" %>
    <div class="controls">
      <%= password_field_tag :password, params[:password], :placeholder => "password" %>
    </div>
  </div>
  <div class="actions">
    <%= submit_tag "Login", :class => "btn btn-large btn-primary" %>
  </div>
<% end %>