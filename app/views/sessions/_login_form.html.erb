<%= simple_form_for :identity, url: '/auth/identity/callback' do |f| %>
<div class="fieldset">
  <legend>登录</legend>
  <%= f.input :auth_key, placeholder: 'example@example.com', label: 'Email', input_html:{ name: :auth_key }%>
  <%= f.input :password, placeholder: '密码', label: '密码', input_html: { name: :password } %>
  <div class="form-group">
    <div class="col-md-3 col-md-offset-2">
      <%= f.submit "登录", :class => " btn btn-block btn-primary" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-10 col-md-offset-2">
      没有帐号？<%= link_to '现在就注册', signup_path %>
    </div>
  </div>
</div>
<% end %>


