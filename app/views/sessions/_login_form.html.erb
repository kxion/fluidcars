<%= simple_form_for :identity, url: '/auth/identity/callback' do |f| %>
<div class="fieldset">
  <legend>登录</legend>
  <%= f.input :auth_key, placeholder: 'xxx@xxx.com', label: 'Email', input_html:{ name: :auth_key }%>
  <%= f.input :password, placeholder: '密码', label: '密码', input_html: { name: :password } %>
  <%= f.submit "登录", :class => "btn btn-large btn-primary col-md-offset-2" %>
</div>
<% end %>
<div>
  没有帐号？<a href="<%= signup_path %>">现在就注册</a>
</div>

