<div class="row">
  <div class="span6 offset3">
    <%= form_tag result_path, :class => 'form-search' do %>
      <div class="input-append">
        <%= text_field_tag :location, params[:location], class: "span2 search-query", :placeholder => "Location" %>
        <button type="submit" class="btn">Search</button>
      </div>
    <% end %>
  </div>
</div>