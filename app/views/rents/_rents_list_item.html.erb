<li>
  <a href="<%= rent_path(rent) %>">
    <div class="more">
      <i class="icon-search pull-right"></i>
      <span class="price">￥<%= rent.rate['day'] %>/天</span>
      <span class="wks"><%= rent.car.location.city %></span>
      <span class="txt"><%= truncate(rent.car.location.detail, length: 6) %></span>
    </div>
