<%= simple_form_for @rent, wrapper: :append, url: confirm_select_time_rents_path do |f| %>
  <div class="fieldset">
    <legend>选择时间</legend>
    <div class='col-md-offset-2' id="rent_type">
      <div class="radio">
        <label>
          <input type='radio' name='rent[period_type]' value='long'>长租</input> 
        </label>
      </div>
      <div class="radio">
        <label>
          <input type='radio' name='rent[period_type]' value='short'>短租</input>
        </label>
      </div>
    </div>
    <div id='select_time'>
      <%= f.input :start, label: '开始时间', hint: "<span class='glyphicon glyphicon-calendar'></span>" %>
      <%= f.input :end, label: '结束时间', hint: "<span class='glyphicon glyphicon-calendar'></span>"  %>
    </div>
    <div class="form-group">
      <div class="col-md-2 col-md-offset-2">
        <%= f.submit "确定",:class => "btn btn-primary"%>
      </div>
    </div>
  </div>
<% end %>
<%= render 'shared/datepicker' %>
<script>
$('#select_time').hide();
$(':radio').click(function(){
  if ($(':radio:checked').val() == 'long')
    $('#select_time').fadeOut();
  else
    $('#select_time').fadeIn();
});
</script>
