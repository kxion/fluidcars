<div id="map-box" class="map-box">
  <div class="map-header">
    <span class="glyphicon glyphicon-map-marker"></span><%= car.location.city+car.location.district+car.location.detail %>
  </div>
  <div id="map_container" class="border-box" style="height:300px">
    地图加载中，请稍后<%= image_tag 'loading1.gif' %>
  </div>
</div>
<div class="border-box">
  <div class="media">
    <%= link_to image_tag(owner.profile.avatar.url("100x100")), profile_path(owner), class: 'pull-left' %>
    <div class="media-body">
    <h4 class="media-heading"><%= owner.profile.nickname %></h4>
    <%= owner.profile.contact %>
    </div>
  </div>
</div>
<%= render :partial => 'shared/location', object: car, as: :car %>
