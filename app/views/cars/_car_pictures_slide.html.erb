<% unless more_than_one_picture?(@car.car_pictures) %> 
  <!-- 只有一张图片，不用幻灯片 -->
  <div class="picture-box">
    <%= image_tag @car.car_pictures.first.picture.url("600") %>
  </div>
  <div class="mark-box">
    <h1 class="mark-brand"><%= @car.brand %></h1>
    <h2 class="mark-location"><%= @car.location.detail %></h2>
  </div>
<% else %>
  <div id="car-pictures" class="carousel slide">
    <!-- 多于一张图片，用幻灯片播放 -->
    <div class="carousel-inner">
      <% @car.car_pictures.each do |pic| %>
        <div class="item picture-box">
          <%= image_tag pic.picture.url("600") %>
          <div class="carousel-caption">
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="mark-box">
    <h1 class="mark-brand"><%= @car.brand %></h1>
    <h2 class="mark-location"><%= @car.location.detail %></h2>
  </div>
  <!-- Controls -->
<!--     <a class="carousel-control" href="#product-picture" data-slide="prev">
    <span class="icon-prev"></span>
  </a>
  <a class="right carousel-control" href="#product-picture" data-slide="next">
    <span class="icon-next"></span>
  </a> -->
<!-- 用图片缩略图作为选择器 -->
  <div class="picture-indicator">
    <% @car.car_pictures.each_index do |index| %>
      <div class="col-md-2">
        <div class="thumbnail">
          <%= image_tag @car.car_pictures[index].picture.url("120"), "data-target" => "#car-pictures", "data-slide-to" => "#{index}" %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>

<script>
$('div.carousel-inner .item:first').addClass("active");
$('#car-pictures').carousel();
</script>