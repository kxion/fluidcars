<%= simple_form_for @car, :html => {:multipart => true} do |f| %>
  <div class="fieldset">
    <legend>车辆信息</legend>
    <%= f.input :token, as: :hidden, value: @car.token %>
    <%= f.input :brand, label: '型号', hint: '车辆品牌及型号', :placeholder=>"车辆型号" %>
    <%= f.input :description, as: :text, input_html: {rows: 5}, label: '描述', :placeholder=>"描述", hint: '请简单描述车况，更利于出租' %>
    <%= f.simple_fields_for :location do |loc| %>
      <div class="form-group">
        <%= loc.label '地区' %>
        <div class="col-lg-8">
          <%= loc.select :province, collection: [], value: 'yes' %>
          <%= loc.select :city, collection: [], value: 'ok' %>
          <%= loc.select :district, collection: [] %>
        </div>
      </div>
      <%= loc.input :detail, label: '详细地址', :placeholder=>"详细地址" %>
    <% end %>
    <div class="form-group">
      <div class="col-md-offset-2 col-md-4">
        <%= f.submit "保存", class: 'btn btn-primary btn-large' %>
      </div>
    </div>
  </div>
  <div class="add-upload"></div>
<% end %>
<%= form_for Picture.new, :html => {:multipart => true, id: 'new_picture'} do |f| %>
  <%= f.hidden_field :car_token, value: @car.token %>
  <span class="picture-upload-button btn btn-success col-md-offset-2">
    <span class="glyphicon glyphicon-upload"></span>上传图片
    <%= f.file_field :image, multiple: true, name: 'picture[image]' %>
  </span>
<% end %>
<div class="progress progress-striped col-md-10 col-md-offset-2" id="progress">
  <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 0%">
  </div>
</div>

